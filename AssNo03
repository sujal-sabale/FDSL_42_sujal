#include <stdio.h>
#include <string.h>

struct student {
    int roll_no;
    char name[50];
    int marks;
}s[10];

int n;

void insert_student() {
    printf("How many students record you have to insert? ");
    scanf("%d", &n);
    printf("Enter the Details:\n");

    for (int i = 0; i < n; i++) {
        printf("Enter Student Roll No.: ");
        scanf("%d", &s[i].roll_no);
        printf("Enter Student Name: ");
        scanf(" %[^\n]s", s[i].name);  // Fixed input for names with spaces
        printf("Enter the Marks: ");
        scanf("%d", &s[i].marks);
    }
    printf("Details Inserted Successfully\n");
}

void rollno_sort() {
    for (int i = 0; i < n - 1; i++) {
        int smallestIdx = i;
        for (int j = i + 1; j < n; j++) {
            if (s[j].roll_no < s[smallestIdx].roll_no) { 
                smallestIdx = j;
            }
        }
        struct student temp = s[i];
        s[i] = s[smallestIdx];
        s[smallestIdx] = temp;
    }
    printf("\nRoll No Sorted Successfully!\n");
}

void name_sort() {
    struct student temp;
    for (int i = 0; i < n - 1; i++) {
        for (int j = i + 1; j < n; j++) {
            if (strcmp(s[j].name, s[i].name) < 0) {  // Fixed comparison
                temp = s[i];
                s[i] = s[j];
                s[j] = temp;
            }
        }
    }
    printf("\nName Sorted Successfully!\n");
}

void marks_sort() {
    for (int i = 0; i < n - 1; i++) {
        int smallestIdx = i;
        for (int j = i + 1; j < n; j++) {
            if (s[j].marks < s[smallestIdx].marks) { 
                smallestIdx = j;
            }
        }
        struct student temp = s[i];
        s[i] = s[smallestIdx];
        s[smallestIdx] = temp;
    }
    printf("\nMarks Sorted Successfully!\n");
}

void display() {
    printf("\nRoll No\tName\tMarks\n");
    for (int i = 0; i < n; i++) {
        printf("%d\t%s\t%d\n", s[i].roll_no, s[i].name, s[i].marks);
    }
}

int main() {
    int choice = 0;
    while (choice != 6) {
        printf("\n------ Sorted Details ------\n");
        printf("1. Insert Details\n2. Sort Roll No\n3. Sort Name\n4. Sort Marks\n5. Display Details\n6. Exit program\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                insert_student();
                break;
            case 2:
                rollno_sort();
                break;
            case 3:
                name_sort();
                break;
            case 4:
                marks_sort();
                break;
            case 5:
                display();
                break;
            case 6:
                printf("\nExit the program!\n");
                break;
            default:
                printf("Invalid choice\n");
        }
    }
    return 0;
}
