#include <stdio.h>

struct student {
    int roll_no;
    char name[50];
    int marks;
}s[10];

int n;

void insert_student() {
    printf("How many students record you have to insert? ");
    scanf("%d", &n);
    printf("Enter the Details:\n");

    for (int i = 0; i < n; i++) {
        printf("Enter Student Roll No.: ");
        scanf("%d", &s[i].roll_no);
        printf("Enter Student Name: ");
        scanf("%s", s[i].name); 
        printf("Enter the Marks: ");
        scanf("%d", &s[i].marks);
    }
    printf("Details Inserted Successfully\n");
}

void rollno_sort() {
    for (int i = 0; i < n - 1; i++) {
        int smallestIdx = i ;
        for (int j = i+1; j < n ; j++) {
            if (s[j].roll_no < s[smallestIdx].roll_no) { 
               smallestIdx = j ;
            }
        }
                struct student temp = s[i];
                s[i] = s[smallestIdx];
                s[smallestIdx] = temp;
    }
    printf("\nRoll No Sorted Successfully!\n");
}

void marks_sort() {
    for (int i = 0; i < n - 1; i++) {
           int smallestIdx= i ;
        for (int j = i + 1; j < n; j++) {
            if (s[j].marks < s[smallestIdx].marks) { 
                smallestIdx = j  ;
            }
        }
                struct student temp = s[i];
                s[i] = s[smallestIdx];
                s[smallestIdx] = temp;
    }
    printf("\nMarks Sorted Successfully!\n");
}

void display() {
    printf("\nRoll No\tName\tMarks\n");
    for (int i = 0; i < n; i++) {
        printf("%d\t%s\t%d\n", s[i].roll_no, s[i].name, s[i].marks);
    }
}

int main() {
    int choice = 0;
    while (choice != 5) {
        printf("\n------ Sorted Details ------\n");
        printf("1. Insert Details\n2. Sort Roll No\n3. Sort Marks\n4. Display Details\n5. Exit program\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                insert_student();
                break;
            case 2:
                rollno_sort();
                break;
            case 3:
                marks_sort();
                break;
            case 4:
                display();
                break;
            case 5:
                printf("\nExit the program!\n");
                break;
            default:
                printf("Invalid choice\n");
        }
    }
    return 0;
}
